<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.tomatotask" android:versionCode="2"
    android:versionName="1.0.1">
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="18" />
    <application android:allowBackup="true" android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:name="com.android.tomatotask.ViewPagerActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingActivity"></activity>
        <activity android:name=".BreakActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".TaskActivity"></activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".TomatoActivity"></activity>
        <activity android:name="com.android.tomatotask.Task.BaseActivity" />
        <activity android:name="com.android.tomatotask.Task.EditActivity" />
        <activity android:name="com.android.tomatotask.Task.WriteActivity" />
    </application>
    <uses-permission android:name="android.permission.VIBRATE" />
    <!--<uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/> -->
</manifest>