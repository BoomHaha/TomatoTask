<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" > <!-- android:background="@drawable/bg" -->

    <Button
        android:id="@id/topButton"
        android:layout_width="fill_parent"
        android:layout_height="55.0dip"
        android:background="@drawable/topbutton"
        android:paddingRight="200.0dip"
        android:text="记录"
        android:textColor="#000000"
        android:textSize="30sp" /> <!-- android:background="@color/white" -->

    <Button
        android:id="@id/number"
        android:layout_width="55.0dip"
        android:layout_height="55.0dip"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/topButton"
        android:layout_marginRight="17.0dip"
        android:background="@drawable/number"
        android:textColor="#000000" /> <!-- android:background="@color/white" -->

    <ListView
        android:id="@id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topButton"
        android:listSelector="#00000000" />

</RelativeLayout>